<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:forceDarkAllowed="false"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Screen.Activity.SplashScreen">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgMainlogo"
            android:layout_width="@dimen/_220sdp"
            android:layout_height="@dimen/_120sdp"
            android:layout_gravity="center"
            android:src="@drawable/main_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/raleway_extrabold"
            android:text="@string/e_learning"
            android:layout_marginTop="@dimen/_10sdp"
            android:textColor="@color/crystalRed"
            android:textSize="@dimen/_30sdp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/lato_regular"
            android:text="@string/the_future_of_working_education"
            android:textColor="@color/crystalBlue"
            android:textSize="@dimen/_13sdp"
            android:textStyle="bold" />

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_10sdp"
        android:fontFamily="@font/lato_regular"
        android:gravity="center"
        android:padding="@dimen/_2sdp"
        android:layout_centerHorizontal="true"
        android:text="Powered by \nSTEPHEN INNOVATIONS (PVT) LTD"
        android:textColor="@color/crystalBlue"
        android:textSize="@dimen/_10sdp"
        android:textStyle="bold" />
</RelativeLayout>