<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.crystalmartin.crystalmartinelearning">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-sdk android:minSdkVersion="22" android:targetSdkVersion="32" />
    <!--<uses-sdk android:minSdkVersion="21" android:targetSdkVersion="32" />-->

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launch_logo"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launch_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CrystalMartinElearningApp"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".Screen.Activity.VideoPlayer"
            android:exported="false" android:screenOrientation="landscape" />
        <activity
            android:name=".Screen.Activity.Change_Language"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Screen.Activity.SplashScreen"
            android:screenOrientation="portrait"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BottomNavigation.Main_Container"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Screen.Activity.Reset_Password"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Screen.Activity.Login_Screen"
            android:screenOrientation="portrait" />
    </application>

</manifest>